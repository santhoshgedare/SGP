@model IEnumerable<SGP.Core.Entities.Items.ItemCategory>

@{
    ViewData["Title"] = "Item Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-semibold text-primary">Item Categories</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Create New
    </a>
</div>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-3">
        <i class="bi bi-exclamation-circle"></i> No item categories found.
    </div>
}
